<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usuario.volcanesperu.volcanmenu">
    <RelativeLayout
        android:id="@+id/content_sismosvolcan"
        android:layout_width="match_parent"
        android:background="@color/blanco"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/encabezado2">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include
                    android:id="@+id/head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/encabezado"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
            android:layout_below="@+id/encabezado2"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:background="@color/alarma"
            android:paddingBottom="7dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:id="@+id/bloque_titulo" >
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="0dp"
                android:id="@+id/bloque_01" >
                <RelativeLayout
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:background="@drawable/fondovolcan"
                    android:id="@+id/b2"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:id="@+id/estado_volcan">
                    </ImageView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_toEndOf="@+id/b2"
                    android:layout_width="wrap_content"
                    android:id="@+id/b1"
                    android:layout_centerVertical="true"
                    android:paddingLeft="7dp"
                    android:layout_toStartOf="@+id/bloquedetallesvolcan"
                    android:paddingRight="7dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textAlignment="viewStart"
                         android:layout_alignParentLeft="true"
                        android:layout_width="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="@color/blanco"
                        android:id="@+id/region">
                    </TextView>
                    <TextView
                        android:textAlignment="viewStart"
                        android:layout_below="@+id/region"
                        android:layout_alignParentLeft="true"
                        android:layout_width="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="@color/blanco"
                        android:id="@+id/actividadactual">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/bloquedetallesvolcan">
                    <TextView
                        android:textColor="@color/blanco"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:layout_centerHorizontal="true"
                        android:textSize="21dp"
                        android:elevation="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/masdetalles"
                        android:id="@+id/irdetalles">
                    </TextView>
                    <TextView
                        android:layout_below="@+id/irdetalles"
                        android:textSize="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Detalles"
                        android:textColor="@color/blanco"
                        android:id="@+id/detallesvolcan">
                    </TextView>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/bloque_titulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imagencuadro"
            android:padding="0dp">
            <FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>
            <com.gjiazhe.panoramaimageview.PanoramaImageView
                android:id="@+id/panorama"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:piv_enablePanoramaMode="true"
                app:piv_invertScrollDirection="false"
                app:piv_show_scrollbar="true">
            </com.gjiazhe.panoramaimageview.PanoramaImageView>
            <RelativeLayout android:layout_height="wrap_content"
                android:layout_width="180dp"
                android:id="@+id/bloquenombre"
                android:background="@color/transparente6"
                android:layout_marginTop="30dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blanco"
                    android:gravity="center_vertical"
                    style="@style/volcan_nombre_listado"
                    android:id="@+id/titulo"
                    android:layout_alignParentStart="true">
                </TextView>
            </RelativeLayout>
            <RelativeLayout android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="80dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/descarga"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:textColor="@color/blanco"
                    style="@style/iconodescargar"
                    android:id="@+id/descarga" >
                </TextView>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/ty255"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/optionsvolcan"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_height="47dp"
        android:id="@+id/opt1"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/gradient_buton"
            android:id="@+id/options"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_height="47dp">
            <TextView android:layout_width="36dp"
                android:layout_height="match_parent"
                android:textSize="17dp"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:background="@drawable/iconoslidebackground"
                android:text="@string/toup"
                android:textColor="@color/igp"
                android:id="@+id/openslide"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="230dp"
        android:id="@+id/mDrawerBlock"
        android:layout_gravity="start"
        android:background="@color/blanco"
        android:choiceMode="singleChoice"
        android:divider="@android:color/darker_gray"
        android:layout_height="match_parent">



        <include
            android:id="@+id/ty"
            layout="@layout/list" />
    </RelativeLayout>
    <!--*********************************************-->
</android.support.v4.widget.DrawerLayout>