<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:padding="2dp">
    <RelativeLayout
        android:layout_height="100dp"
        android:layout_width="fill_parent"
        android:id="@+id/contenedor"
        android:paddingLeft="0dp"
        android:background="@drawable/encabezadobackground"
        android:paddingRight="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout android:layout_width="match_parent"
            android:id="@+id/titulo"
            android:layout_height="35dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:id="@+id/volcannombre"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                style="@style/textolistadovolcanestitulo"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="40dp"
            android:id="@+id/imagenvolcan"
            android:layout_below="@+id/titulo"
            android:layout_height="80dp">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:id="@+id/foto"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@+id/titulo"
            android:layout_toEndOf="@+id/imagenvolcan"
            android:id="@+id/blocke1">
            <TextView
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/tipo"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                style="@style/textolistadovolcanes">
            </TextView>
            <TextView
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/actividad"
                android:layout_width="match_parent"
                android:layout_below="@+id/tipo"
                android:layout_centerHorizontal="true"
                style="@style/textolistadovolcanes">
            </TextView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>