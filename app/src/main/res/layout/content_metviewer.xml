<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/encabezado2">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include
                    android:id="@+id/head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/encabezado"/>
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_below="@+id/encabezado2"
            android:id="@+id/content_sismosvolcan"
            android:layout_width="match_parent"
            android:background="@color/gris_claro"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:layout_height="60dp"
                android:background="@drawable/titulobackground"
                android:id="@+id/titulopantalla"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blanco"
                    android:id="@+id/titulo_trayectorias"
                    style="@style/tituloreporte" >
                </TextView>
            </RelativeLayout>


            <RelativeLayout android:layout_width="match_parent"
                android:layout_below="@+id/titulopantalla"
                android:background="@color/fondogrisclaro"
                android:padding="5dp"
                android:layout_height="match_parent">


                <WebView
                    android:layout_width="match_parent"
                    android:id="@+id/activity_main_webview"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textoexplicacion"
                    android:layout_alignParentTop="true"
                    >
                </WebView>


                <TextView android:layout_width="match_parent"
                    android:id="@+id/textoexplicacion"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="70dp"
                    android:text="Pronóstico basado en modelos númericos desarrollado por el Servicio Nacional de Meteorología e Hidrología del Perú (SENAMHI), el cual muestra la dirección de desplazamiento teórico de las cenizas expulsadas por el volcán."
                    android:layout_height="wrap_content">

                </TextView>

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>









    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/ty255"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/optionsvolcan"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="47dp"
        android:id="@+id/opt1"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/gradient_buton"
            android:id="@+id/options"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_height="47dp">
            <TextView android:layout_width="36dp"
                android:layout_height="match_parent"
                android:textSize="17dp"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:background="@drawable/iconoslidebackground"
                android:text="@string/toup"
                android:textColor="@color/igp"
                android:id="@+id/openslide"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout android:layout_width="230dp"
        android:id="@+id/mDrawerBlock"
        android:layout_gravity="start"
        android:background="@color/blanco"
        android:choiceMode="singleChoice"
        android:divider="@android:color/darker_gray"
        android:layout_height="match_parent">
        <include
            android:id="@+id/ty"
            layout="@layout/list" />
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>