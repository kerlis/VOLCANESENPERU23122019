<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_store_marker"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/marker_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/volcan_amarillo_sm" />
    <TextView
        android:id="@+id/marker_text"
        android:textAlignment="center"
        android:background="@drawable/backtext3"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="12dp"
        android:textColor="@color/azulbackground"
        android:layout_toEndOf="@+id/marker_image"
        android:textStyle="bold" />
</RelativeLayout>