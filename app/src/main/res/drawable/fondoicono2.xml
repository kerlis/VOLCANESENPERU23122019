<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">

            <stroke android:width="9px" android:color="@color/orangeyellow" />
            <solid android:color="@color/orangeyellow2" />
            <size
                android:height="40dp"
                android:width="40dp"
                android:maxWidth="40dp"
                android:minWidth="40dp"/>
        </shape>
    </item>



    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">


            <stroke android:width="9px" android:color="@color/orangeyellow2" />
            <solid android:color="@color/orangeyellow" />



            <size
                android:height="40dp"
                android:width="40dp"
                android:maxWidth="40dp"
                android:minWidth="40dp" />
        </shape>
    </item>
</selector>
